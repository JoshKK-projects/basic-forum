<h1>All Posts</h1>
<%  @posts.each do |post| %>
	<div class='post-box'>
		<h3> <%= link_to post.title, post_path(post)%></h3>
		<p>
			<%= post.user.first_name + ' ' + post.user.last_name	 %>
		</p>
	</div>
	</br>
<% end %>
<h2> Create New Post</h2>
<%= form_for :post, url: '/posts/create' do |f| %>
	<p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
	</p>
	<p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
	</p>
	<p>
        <%= f.submit %>
    </p>
<% end %>